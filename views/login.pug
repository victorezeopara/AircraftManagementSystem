doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Aircraft Management System - Login
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    style.
      /* Embedded CSS styles */
      body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: 
          linear-gradient(135deg, rgba(102, 126, 234, 0.4) 50%, rgba(118, 75, 162, 0.8) 30%),
          url('/images/jets.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #f0f0f0; /* Fallback background color */
      }

      .container {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        padding: 40px;
        width: 400px;
        margin: 20px;
      }

      .head {
        text-align: center;
        margin-bottom: 30px;
      }

      h4 {
        color: #333;
        font-size: 28px;
        margin-bottom: 10px;
      }

      h6 {
        color: #666;
        font-weight: 300;
      }

      .form-group {
        margin-bottom: 25px;
      }

      .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
      }

      .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s;
      }

      .form-group input:focus {
        border-color: #667eea;
        outline: none;
      }

      .btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        width: 100%;
        font-size: 18px;
        cursor: pointer;
        transition: transform 0.3s;
      }

      .btn:hover {
        transform: translateY(-3px);
      }

      .signup-link {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: #666;
      }

      .signup-link a {
        color: #667eea;
        text-decoration: none;
      }

      .signup-link a:hover {
        color: #764ba2;
      }
  
  body
    .container
      .head
        h4 Aircraft Management System
        h6 Designed by Eze Opara
      form(action="/login", method="POST")
        .form-group
          label(for="username")
            i.fas.fa-user
            |  Username
          input#username(type="text", name="username", required)
        .form-group
          label(for="email")
            i.fas.fa-envelope
            |  Email ID
          input#email(type="email", name="email", required)
        .form-group
          label(for="password")
            i.fas.fa-lock
            |  Password
          input#password(type="password", name="password", required)
        button.btn(type="submit") Login
      .signup-link
        p Don't have an account? 
          a(href="#") Contact Admin
